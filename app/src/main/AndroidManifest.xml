<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RememberYourNihongo"
        tools:targetApi="31">

        <!-- HomeActivity declaration -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RememberYourNihongo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HiraganaActivity declaration -->
        <activity
            android:name=".HiraganaActivity"
            android:exported="true"
            android:label="Hiragana Activity"
            android:theme="@style/Theme.RememberYourNihongo" />

        <!-- KatakanaActivity declaration -->
        <activity
            android:name=".KatakanaActivity"
            android:exported="true"
            android:label="Katakana Activity"
            android:theme="@style/Theme.RememberYourNihongo" />

        <!-- RandomKanaActivity declaration -->
        <activity
            android:name=".RandomKanaActivity"
            android:exported="true"
            android:label="Random Kana Activity"
            android:theme="@style/Theme.RememberYourNihongo" />

        <!-- HiraganaCombinations declaration -->
        <activity
            android:name=".HiraganaCombinationsActivity"
            android:exported="true"
            android:label="Main Activity"
            android:theme="@style/Theme.RememberYourNihongo" />

        <!-- KatakanaCombinations declaration -->
        <activity
            android:name=".KatakanaCombinationsActivity"
            android:exported="true"
            android:label="Main Activity"
            android:theme="@style/Theme.RememberYourNihongo" />

    </application>

</manifest>
